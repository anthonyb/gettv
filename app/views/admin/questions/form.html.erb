<div class='chr-form-small'>
  <%= simple_nested_form_for @object, url: @form_action_url, method: :post do |f| %>
    <%= f.input :title %>

    <p><b>Answers</b></p>
    <div class='chr-form-nested chr-form-nested-images sortable-list'>
      <%= f.fields_for :answers do |ff| %>
        <%= image_tag ff.object.image.small.url %>
        <%= ff.input :title, placeholder: 'Answer title' %>
        <%= ff.input :image %>
        <%= ff.input :_position, as: :hidden %>
      <% end %>
    </div>

  <% end %>
</div>